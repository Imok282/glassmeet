    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.475.0",
    "mongoose": "^8.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zustand": "^5.0.11",
    "vite": "^6.0.0",
    "typescript": "^5.2.2",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
