{
  "name": "glassmeet",
  "version": "1.0.0",
  "description": "Premium macOS-style video conferencing for LDR couples",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node dist-server/index.js",
    "build:server": "tsc -p server/tsconfig.server.json",
